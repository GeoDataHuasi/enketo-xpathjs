{
    "env": {
        "es6": true,
        "browser": true,
        "commonjs": true
    },
    "globals": {
        "Promise": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "sourceType": "module",
        "ecmaVersion": 6
    },
    "rules": {
        "quotes": [ "error", "single" ],
        "semi": [ "error", "always" ],
        "no-console": 0,
        "no-fallthrough": 0
    }
}
